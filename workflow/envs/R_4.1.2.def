Bootstrap: docker
From: rocker/tidyverse:4.1.2

%post

    # Install packages required for R packages
    apt update
    apt install -y libbz2-dev libmagick++-dev libavfilter-dev ffmpeg libglpk-dev fftw-dev

    # Install CRAN packages
    install2.r --error \
        magick \
        av \
        imager \
        here \
        remotes \
        plotly \
        bookdown \
        av \
        gganimate
